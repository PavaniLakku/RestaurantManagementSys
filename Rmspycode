def receipt():
    global billnumber,date
    if costoffoodvar.get() != '' or costofcakesvar.get() != '' or costofdrinksvar.get() != '':
        textReceipt.delete(1.0,END)
        x=random.randint(100,10000)
        billnumber='BILL'+str(x)
        date=time.strftime('%d/%m/%Y')
        textReceipt.insert(END,'Receipt Ref:\t\t'+billnumber+'\t\t'+date+'\n')
        textReceipt.insert(END,'***************************************************************\n')
        textReceipt.insert(END,'Items:\t\t Cost Of Items(Rs)\n')
        textReceipt.insert(END,'***************************************************************\n')
    if e_samosa.get()!='0':
            textReceipt.insert(END,f'samosa\t\t\t{int(e_samosa.get())*1}\n\n')

    if e_paneerpuff.get()!='0':
            textReceipt.insert(END,f'paneerpuff\t\t\t{int(e_paneerpuff.get())*2}\n\n')

    if e_chickenpuff.get()!='0':
            textReceipt.insert(END,f'chickenpuff\t\t\t{int(e_chickenpuff.get())*3}\n\n')

    if e_bajji.get() != '0':
            textReceipt.insert(END, f'bajji:\t\t\t{int(e_bajji.get()) * 2}\n\n')

    if e_vada.get() != '0':
            textReceipt.insert(END, f'vada:\t\t\t{int(e_vada.get()) * 5}\n\n')

    if e_vadapav.get() != '0':
            textReceipt.insert(END, f'vadapav:\t\t\t{int(e_vadapav.get()) * 5}\n\n')

    if e_lassi.get() != '0':
            textReceipt.insert(END, f'Lassi:\t\t\t{int(e_lassi.get()) * 2}\n\n')

    if e_coffee.get() != '0':
            textReceipt.insert(END, f'Coffee:\t\t\t{int(e_coffee.get()) * 2}\n\n')

    if e_faluda.get() != '0':
            textReceipt.insert(END, f'Faluda:\t\t\t{int(e_faluda.get()) * 5}\n\n')

    if e_masalatea.get() != '0':
            textReceipt.insert(END, f'masalatea:\t\t\t{int(e_masalatea.get()) * 2}\n\n')

    if e_gingertea.get() != '0':
            textReceipt.insert(END, f'gingertea:\t\t\t{int(e_gingertea.get()) * 2}\n\n')

    if e_badammilk.get() != '0':
            textReceipt.insert(END, f'Badam Milk:\t\t\t{int(e_badammilk.get()) * 4}\n\n')

    if e_colddrinks.get() != '0':
            textReceipt.insert(END, f'Cold Drinks:\t\t\t{int(e_coldrinks.get()) * 3}\n\n')

    if e_oreo.get() != '0':
            textReceipt.insert(END, f'Oreo:\t\t\t{int(e_oreo.get()) * 4}\n\n')

    if e_mango.get() != '0':
            textReceipt.insert(END, f'mango:\t\t\t{int(e_mango.get()) * 4}\n\n')

    if e_dryfruit.get() != '0':
            textReceipt.insert(END, f'dryfruit:\t\t\t{int(e_dryfruit.get()) * 4}\n\n')
    if e_pista.get() != '0':
            textReceipt.insert(END, f'pista:\t\t\t{int(e_pista.get()) * 4}\n\n')

    if e_chocolate.get() != '0':
            textReceipt.insert(END, f'Chocolate:\t\t\t{int(e_chocolate.get()) * 4}\n\n')

    if e_blackforest.get() != '0':
            textReceipt.insert(END, f'Black Forest:\t\t\t{int(e_blackforest.get()) * 4}\n\n')

    if e_vanilla.get() != '0':
            textReceipt.insert(END, f'Vanilla:\t\t\t{int(e_vanilla.get()) * 4}\n\n')

    textReceipt.insert(END,'***************************************************************\n')
    if costoffoodvar.get()!='$0':
            textReceipt.insert(END,f'Cost Of Food\t\t\t${priceoffood}\n\n')
    if costofdrinksvar.get() != '$0 ':
            textReceipt.insert(END,f'Cost Of Drinks\t\t\t${priceofdrinks}\n\n')
    if costofcakesvar.get() != '$0':
            textReceipt.insert(END,f'Cost Of Cakes\t\t\t${priceofcakes}\n\n')

    textReceipt.insert(END, f'Sub Total\t\t\t${subtotalofItems}\n\n')
    textReceipt.insert(END, f'Service Tax\t\t\t${0.0836*subtotalofItems}\n\n')
    textReceipt.insert(END, f'Total Cost\t\t\t${subtotalofItems+subtotalofItems*0.0836}\n\n')
    textReceipt.insert(END,'***************************************************************\n')





def totalcost():
    global priceoffood, priceofdrinks, priceofcakes, subtotalofItems
    if var1.get() != 0 or var2.get() != 0 or var3.get() != 0 or var4.get() != 0 or var5.get() != 0 or \
            var6.get() != 0 or var7.get() != 0 or var8.get() != 0 or var9.get() != 0 or var10.get() != 0 or \
            var11.get() != 0 or var12.get() != 0 or var13.get() != 0 or var14.get() != 0 or var15.get() != 0 or \
            var16.get() != 0 or var17.get() != 0 or var18.get() != 0 or var19.get() != 0 or var20.get() != 0 or \
            var21.get() != 0 or var22.get() != 0 or var23.get() != 0 or var24.get() != 0 or var25.get() != 0 or \
            var26.get() != 0 or var27.get() != 0:

            item1=int(e_samosa.get())
            item2 = int(e_paneerpuff.get())
            item3 = int(e_chickenpuff.get())
            item4 = int(e_eggpuff.get())
            item5 = int(e_bajji.get())
            item6 = int(e_vada.get())
            item7 = int(e_vadapav.get())
            item8 = int(e_lassi.get())
            item9 = int(e_coffee.get())
            item10 = int(e_faluda.get())
            item11 = int(e_gingertea.get())
            item12 = int(e_masalatea.get())
            item13 = int(e_badammilk.get())
            item14 = int(e_colddrinks.get())
            item15 = int(e_mango.get())
            item16 = int(e_pista.get())
            item17 = int(e_blackforest.get())
            item18 = int(e_chocolate.get())
            item19 = int(e_vanilla.get())
            item20= int(e_dryfruit.get())
            item21 = int(e_oreo.get())

            priceoffood=(item1*1)+(item2*2)+(item3*3)+(item4*2)+(item5*5)+(item6*5)+(item7*2)
            priceofdrinks=(item8*2)+(item9*2)+(item10*5)+(item11*2)+(item12*2)+(item13*4)+(item14*3)
            priceofcakes = (item15*4)+(item16*4)+(item17*4)+(item18*4)+(item19*4)+(item20*4)+(item21*4)

            costoffoodvar.set('$'+str(priceoffood))
            costofdrinksvar.set('$'+str(priceofdrinks))
            costofcakesvar.set('$ '+str(priceofcakes))

            subtotalofItems = (priceoffood + priceofdrinks + priceofcakes)
            subtotalvar.set('$ '+str(subtotalofItems))

            servicetaxvar.set('$ 0.0836*subtotal')

            totalcost = subtotalofItems +0.0836*subtotalofItems
            totalcostvar.set('$ '+str(totalcost))

    else: messagebox.showerror('Error', 'No Item Is selected')

